{
  "name": "nostr-dm-magiclink-middleware",
  "version": "0.1.0",
  "description": "A middleware for handling magic link authentication via Nostr DMs",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "config": "./scripts/config.sh",
    "startup": "./scripts/startup.sh",
    "shutdown": "./scripts/shutdown.sh",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nostr",
    "authentication",
    "magic-link",
    "middleware",
    "typescript",
    "dm",
    "direct-message"
  ],
  "author": "vveerrgg",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/winston": "^2.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nostr-tools": "^1.17.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.5",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
