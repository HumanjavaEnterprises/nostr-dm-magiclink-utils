{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/__tests__/types.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
